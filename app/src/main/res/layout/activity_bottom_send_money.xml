<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/send_money_bkg">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_send_money"
                android:layout_width="0dp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/user"
                app:civ_border_color="@color/white"
                app:civ_border_width="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_forward"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/iv_forward"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_15sdp"
                android:src="@drawable/ic_forward"
                app:layout_constraintBottom_toBottomOf="@+id/cv_send_money"
                app:layout_constraintEnd_toStartOf="@+id/cv_receiving_money"
                app:layout_constraintHorizontal_weight="0.5"
                app:layout_constraintStart_toEndOf="@+id/cv_send_money"
                app:layout_constraintTop_toTopOf="@+id/cv_send_money"
                tools:ignore="ContentDescription" />

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_receiving_money"
                android:layout_width="0dp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginEnd="8dp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/user"
                app:civ_border_color="@color/white"
                app:civ_border_width="3dp"
                app:layout_constraintBottom_toBottomOf="@+id/cv_send_money"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/iv_forward"
                app:layout_constraintTop_toTopOf="@+id/cv_send_money"
                app:layout_constraintVertical_bias="0.0" />
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/tv_send_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="Send Amount To"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout7"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout7"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout7" />

        <com.kotlin.datearound.widget.PrefixEditText
            android:id="@+id/ed_send_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="70dp"
            android:background="@drawable/send_money_border_bottom"
            android:ems="10"
            android:fontFamily="@font/opensans_semibold"
            android:inputType="number"
            android:maxLength="15"
            android:maxLines="1"
            android:padding="@dimen/_10sdp"
            android:tag="$ "
            android:text="100"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="@+id/tv_send_amount"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_send_amount"
            app:layout_constraintTop_toBottomOf="@+id/tv_send_amount" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/ed_send_amount"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/ed_send_amount"
            app:layout_constraintTop_toBottomOf="@+id/ed_send_amount">

            <Button
                android:id="@+id/btn_amount_50"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/border"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:padding="@dimen/_7sdp"
                android:text="$ 50"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_amount_100"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/btn_amount_100"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/border"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:padding="@dimen/_7sdp"
                android:text="$ 100"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_amount_50"
                app:layout_constraintEnd_toStartOf="@+id/btn_amount_500"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/btn_amount_50"
                app:layout_constraintTop_toTopOf="@+id/btn_amount_50"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/btn_amount_500"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/border"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:padding="@dimen/_7sdp"
                android:text="$ 100"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_amount_100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/btn_amount_100"
                app:layout_constraintTop_toTopOf="@+id/btn_amount_100"
                app:layout_constraintVertical_bias="1.0" />
        </android.support.constraint.ConstraintLayout>

        <Button
            android:id="@+id/btn_bottom_add_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/rounded_btn"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/add_money"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout10"
            app:layout_constraintVertical_bias="1.0" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
